<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="citaapp.citapprenticeshipapp">


    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".TimelineMain"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ApprenticeshipBegin"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ApprenticeshipEmployment"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ContractSignContract"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ContractApproval"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".EnrolmentUSI"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".EnrolmentTrainingPlan"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".EnrolmentComplete"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditInformation"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ViewInformation"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".TestDatabaseConnection"/>

    </application>

</manifest>